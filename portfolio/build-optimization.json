{
  "name": "portfolio-optimization",
  "version": "1.0.0",
  "description": "Build process for portfolio optimization",
  "scripts": {
    "build": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o dist/style.min.css style.css",
    "minify-js": "terser js/app.js -o dist/app.min.js",
    "optimize-images": "imagemin img/*.{jpg,png} --out-dir=dist/img --plugin=imagemin-webp",
    "serve": "http-server dist"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.2",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "http-server": "^14.1.1"
  }
}